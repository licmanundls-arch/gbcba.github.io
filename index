    <script>
        // Tab Navigation
        function switchTab(tabName) {
            const panels = document.querySelectorAll('.panel');
            const buttons = document.querySelectorAll('.nav-btn');
            
            panels.forEach(panel => panel.classList.remove('active'));
            buttons.forEach(btn => btn.classList.remove('active'));
            
            document.getElementById(tabName).classList.add('active');
            event.target.classList.add('active');
        }

        // Modal Management
        function openModal(modalId) {
            document.getElementById(modalId).classList.add('active');
        }

        function closeModal(modalId) {
            document.getElementById(modalId).classList.remove('active');
        }

        window.onclick = function(event) {
            if (event.target.classList.contains('modal')) {
                event.target.classList.remove('active');
            }
        }

        // Form Handlers
        function guardarAlumno(event) {
            event.preventDefault();
            alert('Alumno guardado exitosamente');
            closeModal('modalAlumno');
        }

        function guardarClase(event) {
            event.preventDefault();
            alert('Clase guardada exitosamente');
            closeModal('modalClase');
        }

        function guardarPago(event) {
            event.preventDefault();
            alert('Pago registrado exitosamente');
            closeModal('modalPago');
        }

        function guardarGraduacion(event) {
            event.preventDefault();
            alert('Graduaci√≥n registrada exitosamente');
            closeModal('modalGraduacion');
        }

        function guardarEvento(event) {
            event.preventDefault();
            alert('Evento guardado exitosamente');
            closeModal('modalEvento');
        }

        function guardarInventario(event) {
            event.preventDefault();
            alert('Producto guardado exitosamente');
            closeModal('modalInventario');
        }

        function guardarInstructor(event) {
            event.preventDefault();
            alert('Instructor guardado exitosamente');
            closeModal('modalInstructor');
        }

        // Filter Functions
        function filterAlumnos() {
            const searchText = document.getElementById('searchAlumnos').value.toLowerCase();
            const tableRows = document.getElementById('alumnosTable').getElementsByTagName('tr');
            
            for (let row of tableRows) {
                const nombre = row.cells[0].textContent.toLowerCase();
                row.style.display = nombre.includes(searchText) ? '' : 'none';
            }
        }

        function filterAsistencia() {
            const searchText = document.getElementById('searchAsistencia').value.toLowerCase();
            const tableRows = document.getElementById('asistenciaTable').getElementsByTagName('tr');
            
            for (let row of tableRows) {
                const nombre = row.cells[1].textContent.toLowerCase();
                row.style.display = nombre.includes(searchText) ? '' : 'none';
            }
        }

        function filterPagos() {
            const searchText = document.getElementById('searchPagos').value.toLowerCase();
            const tableRows = document.getElementById('pagosTable').getElementsByTagName('tr');
            
            for (let row of tableRows) {
                const alumno = row.cells[0].textContent.toLowerCase();
                row.style.display = alumno.includes(searchText) ? '' : 'none';
            }
        }

        // Attendance Management
        function toggleAll(checkbox) {
            const checks = document.querySelectorAll('.asistencia-check');
            checks.forEach(check => check.checked = checkbox.checked);
        }

        function marcarAsistencia() {
            const checked = document.querySelectorAll('.asistencia-check:checked').length;
            alert(`${checked} alumnos marcados como presentes`);
        }

        // Edit/Delete Functions
        function editAlumno(id) {
            openModal('modalAlumno');
        }

        function deleteAlumno(id) {
            if (confirm('¬øDeseas eliminar este alumno?')) {
                alert('Alumno eliminado');
            }
        }

        function verDetallesPago(id) {
            alert('Detalles de pago ID: ' + id);
        }

        function enviarRecordatorio(id) {
            alert('Recordatorio enviado al alumno');
        }

        // Calendar Navigation
        function previousWeek() {
            alert('Mostrando semana anterior');
        }

        function nextWeek() {
            alert('Mostrando pr√≥xima semana');
        }

        // Edit functions
        function editAlumno(id) {
            openModal('modalAlumno');
        }

        // Comunicaci√≥n Management
        function enviarNotificacion(event) {
            event.preventDefault();
            alert('Notificaci√≥n enviada exitosamente a los destinatarios');
            closeModal('modalComunicacion');
        }

        // Reportes Management
        function generarReporte() {
            const tipo = document.getElementById('tipoReporte').value;
            const periodo = document.getElementById('periodoPeriodo').value;
            const formato = document.getElementById('formatoDescarga').value;
            
            if (!tipo || !periodo || !formato) {
                alert('Por favor selecciona todos los par√°metros del reporte');
                return;
            }
            
            const nombreReporte = `Reporte_${tipo}_${periodo}_${new Date().getTime()}.${formato === 'pdf' ? 'pdf' : 'xlsx'}`;
            alert(`Descargando: ${nombreReporte}`);
        }
    </script>
</body>
</html>
